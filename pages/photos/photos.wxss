/* pages/photos/photos.wxss */
.cu-header {
  /* background: #d66e50; */
  background-image: linear-gradient(to top, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%);
}

.box-wrapper {
  padding: 40rpx 40rpx;
  column-count: 2;
  column-gap: 20rpx;
}

.photo-block {
  position: relative;
  margin-bottom: 20rpx;
}

.image-box {
  width: 100%;
  height: 130px;
  border-radius: 20rpx;
}

.author {
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  color: #333;
}
.author .icon-like {
  font-size: 32rpx;
  color: #eee;
}
.author .like {
  font-size: 32rpx;
  background-image: linear-gradient(to top, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%);
  -webkit-background-clip:text; 
  -webkit-text-fill-color:transparent;
}
.author .name {
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;
  background-image: linear-gradient(to top, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%);
  -webkit-background-clip:text; 
  -webkit-text-fill-color:transparent;
}

.tabs {
  position: fixed;
  left: 0;
  top: 520rpx;
  z-index: 999;
}

.tab-item {
  position: absolute;
  left: -6rpx;
  padding: 10rpx;
  border-radius: 0 2rem 2rem 0;
  color: #fff;
  background: linear-gradient(to top, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%);
  transition: left .3s cubic-bezier(1,.28,.14,1.21);
}

.tab-item.unactive {
  left: -40rpx;
}

.tab-dog {
  top: 130rpx;
}

.iconfont {
  font-size: 34px;
}
